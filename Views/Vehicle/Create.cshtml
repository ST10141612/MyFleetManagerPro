@model MyFleetManagerPro.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="col d-flex justify-content-center">
    <div class="card" style="width: 36rem; height: auto;">
        <div class="card-body text-center">
            <h2 class="card-title text-primary">Add Vehicle</h2>
            <p class="align-content-center">Enter Vehicle Details</p>
            <div class="container">
                <form asp-action="Create">
                    <div>
                        <div class="form-group">
                            <label asp-for="Registration_Number" class="control-label">Registration Number</label>
                            <input asp-for="Registration_Number" class="form-control" placeholder="e.g. YGG 737 HBP" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DriverID" class="control-label">Driver</label>
                            <select asp-for="DriverID" class="form-select" >
                                <option selected>Select the driver of the vehicle</option>
                                    @foreach (Driver d in ViewBag.drivers)
                                    {
                                        <option value=@d.DriverID>@d.DriverName</option>
                                    }
                            </select>
                       </div>
                        
                        <div class="form-group">
                            <label asp-for="FleetID" class="control-label">Fleet</label>
                            <select asp-for="FleetID" class="form-select">
                                <option selected>Select the fleet the vehicle belongs to</option>
                                    @foreach (Fleet f in ViewBag.fleets)
                                    {
                                        <option value =@f.FleetID>@f.FleetName</option>
                                    }
                            </select>
                        </div>
                        <br />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Save" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}