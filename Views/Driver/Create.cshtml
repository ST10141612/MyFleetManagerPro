@model MyFleetManagerPro.Models.Driver

@{
    ViewData["Title"] = "Create";
}


<h4>Driver</h4>
<hr />
<div class="col d-flex justify-content-center">
    <div class="card" style="width: 36rem; height: auto;">
        <div class="card-body text-center">
            <h2 class="card-title text-primary">Add Driver</h2>
            <p class="align-content-center">Enter Driver Details</p>
            <div class="container">
                <form asp-action="Create">
                    <div>
                        <div class="form-group">
                            <label asp-for="DriverName" class="control-label">Driver</label>
                            <input asp-for="DriverName" class="form-control" placeholder="e.g. Masana" />
                        </div>
                        <br />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Save" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

