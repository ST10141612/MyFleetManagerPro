@model MyFleetManagerPro.ViewModels.AddReportViewModel

@{
    ViewData["Title"] = "Generate";
}

<h1>Generate</h1>

<h4>AddReportViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Generate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fleetID" class="control-label"></label>
                <select asp-for="fleetID" class="form-select" >
                    <option selected>Select the fleet you want a report on</option>
                        @foreach (Fleet f in ViewBag.fleets)
                         {
                            <option value=@f.FleetID>@f.FleetName</option>
                         }
                </select>
                <span asp-validation-for="fleetID" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

